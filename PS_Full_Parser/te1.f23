program tiny_example_1
{
    procedure
         set_constant(
            double  dval,                   // The constant value
            double  dsoln[], integer s1     // Approximate solution
                     )
    {
        integer i := 0;                     // Loop variable

        while ( i >= 0 && i <= s1 )
            dsoln[i++] := dval;

    }   // of set_constant
}
